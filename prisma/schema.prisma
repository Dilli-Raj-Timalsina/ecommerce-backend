// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cart {
  id        Int    @id @default(autoincrement())
  amount    String
  productId String
  User      User?  @relation(fields: [userId], references: [id])
  userId    Int?

  @@map("cart")
}

model User {
  id             Int      @id @default(autoincrement())
  name           String?
  email          String   @unique
  password       String
  token          String?
  contact        Float?
  cart           Cart[]
  wishList       String[]
  profilePicture String?
  bio            String?

  @@map("users")
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  subTitle    String?
  price       Float
  description String?
  category    String
  thumbNail   String
  sideImages  String[] @default([])
  createdDate DateTime @default(now())

  @@map("products")
}

model Hero {
  id          Int      @id @default(autoincrement())
  h1title     String
  h1subTitle  String
  h2title     String
  h2subTitle  String
  h3title     String
  h3subTitle  String
  imageFirst  String
  imageSecond String
  imageThird  String
  category1   String
  category2   String
  category3   String
  createdDate DateTime @default(now())

  @@map("heros")
}
