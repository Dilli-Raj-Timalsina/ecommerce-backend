// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String   @unique
  password       String
  token          String?
  contact        Float?
  cart           String[]
  profilePicture String?
  bio            String?

  @@map("users")
}

model Product {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  subTitle    String?
  price       Float
  description String?
  thumbNail   String

  @@map("products")
}
